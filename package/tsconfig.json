{
  "compilerOptions": {
    "outDir": "lib",
    "module": "ES2015",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "classes/*": ["classes/*"],
      "types/*": ["types/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"]
}
